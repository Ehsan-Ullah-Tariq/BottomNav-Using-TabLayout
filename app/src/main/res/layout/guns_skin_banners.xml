<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/greyColor"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
           <ImageView
               android:id="@+id/ivUserImage"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:src="@drawable/ic__key"
               android:background="@drawable/background_pink_capsule"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
             android:layout_marginTop="20dp"
               />
            <TextView
                android:id="@+id/tvFeedUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/ivUserImage"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="FahadRasheed"/>

            <TextView
                android:id="@+id/tvFeedPlace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_pink_capsule"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/ic_money"
                android:layout_marginStart="10dp"
                android:drawablePadding="2dp"
                android:padding="3dp"
                android:gravity="center"
                android:text="#1 PLACE"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/tvFeedUsername"
                app:layout_constraintStart_toEndOf="@+id/ivUserImage"
                app:layout_constraintTop_toBottomOf="@id/tvFeedUsername" />
            <TextView
                android:id="@+id/tvFeedPoints"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_pink_capsule"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/ic_money"
                android:padding="3dp"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center"
                android:text="#1 PLACE"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@+id/tvFeedPlace"
                app:layout_constraintTop_toBottomOf="@id/tvFeedUsername" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>