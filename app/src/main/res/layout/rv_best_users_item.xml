<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/dark_gray"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivUserImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_person"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvFeedUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/ivUserImage"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:fontFamily="@font/montserratsemibold"
                android:text="Fahad Rasheed"/>

            <TextView
                android:id="@+id/tvFeedPlace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_pink_capsule"
                android:layout_marginTop="@dimen/_6sdp"
                android:drawableStart="@drawable/ic_arrow_circle_up"
                android:layout_marginStart="10dp"
                android:drawablePadding="2dp"
                android:paddingStart="@dimen/_3sdp"
                android:paddingEnd="@dimen/_3sdp"
                android:padding="3dp"
                android:gravity="center"
                android:text="#1 PLACE"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:fontFamily="@font/montserratmedium"
                app:layout_constraintEnd_toEndOf="@+id/tvFeedUsername"
                app:layout_constraintStart_toEndOf="@+id/ivUserImage"
                app:layout_constraintTop_toBottomOf="@id/tvFeedUsername" />

            <TextView
                android:id="@+id/tvFeedPoints"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/background_pink_capsule"
                android:drawableStart="@drawable/ic_arrow_circle_up"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/montserratmedium"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="4000"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvFeedPlace"
                app:layout_constraintStart_toEndOf="@+id/tvFeedPlace"
                app:layout_constraintTop_toTopOf="@+id/tvFeedPlace" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>