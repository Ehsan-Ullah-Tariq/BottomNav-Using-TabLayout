<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/greyColor"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_5sdp"
            android:background="@color/new_dark_grey">

            <ImageView
                android:id="@+id/ivUserImage"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/ak47"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:text="AWP | Capillary"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:fontFamily="@font/montserratmedium"
                app:layout_constraintStart_toEndOf="@+id/ivUserImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvItemType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Field-Tested"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="11dp"
                android:fontFamily="@font/montserratmedium"
                app:layout_constraintTop_toBottomOf="@+id/tvItemName"
                app:layout_constraintStart_toStartOf="@+id/tvItemName"/>

            <TextView
                android:id="@+id/tvItemPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3900"
                android:textColor="@color/greyColor"
                android:textSize="11dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableStart="@drawable/ic_arrow_circle_up"
                android:fontFamily="@font/montserratmedium"
                app:layout_constraintTop_toBottomOf="@+id/tvItemType"
                app:layout_constraintStart_toStartOf="@+id/tvItemType"/>

            <TextView
                android:id="@+id/showAllBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:background="@drawable/background_pink_capsule"
                android:fontFamily="@font/montserratmedium"
                android:paddingStart="@dimen/_14sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_14sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="Get"
                android:gravity="center"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>